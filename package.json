{
  "name": "adp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/shared"
  ],
  "scripts": {
    "backend:dev": "cd packages/backend && npm run dev",
    "backend:build": "cd packages/backend && npm run build",
    "backend:prettier": "cd packages/backend && npm run prettier",
    "backend:lint": "cd packages/backend && npm run lint",
    "backend:lint:fix": "cd packages/backend && npm run lint:fix",
    "frontend:dev": "cd packages/frontend && npm run dev",
    "frontend:build": "cd packages/frontend && npm run build",
    "frontend:prettier": "cd packages/frontend && npm run prettier",
    "frontend:lint": "cd packages/frontend && npm run lint",
    "frontend:lint:fix": "cd packages/frontend && npm run lint:fix",
    "shared:build": "cd packages/shared && npm run build",
    "shared:prettier": "cd packages/shared && npm run prettier",
    "shared:lint": "cd packages/shared && npm run lint",
    "shared:lint:fix": "cd packages/shared && npm run lint:fix",
    "prettier": "npm run backend:prettier && npm run frontend:prettier && npm run shared:prettier",
    "lint": "npm run backend:lint && npm run frontend:lint && npm run shared:lint",
    "lint:fix": "npm run backend:lint:fix && npm run frontend:lint:fix && npm run shared:lint:fix"
  },
  "author": "Martin Facciuto",
  "license": "ISC"
}
