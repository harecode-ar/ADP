{
  "name": "adp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/shared",
    "packages/scripts"
  ],
  "scripts": {
    "backend:dev": "cd packages/backend && yarn dev",
    "backend:build": "cd packages/backend && yarn build",
    "backend:prettier": "cd packages/backend && yarn prettier",
    "backend:lint": "cd packages/backend && yarn lint",
    "backend:lint:fix": "cd packages/backend && yarn lint:fix",
    "backend:seed": "cd packages/backend && yarn seed",
    "frontend:dev": "cd packages/frontend && yarn dev",
    "frontend:build": "cd packages/frontend && yarn build",
    "frontend:prettier": "cd packages/frontend && yarn prettier",
    "frontend:lint": "cd packages/frontend && yarn lint",
    "frontend:lint:fix": "cd packages/frontend && yarn lint:fix",
    "shared:build": "cd packages/shared && yarn build",
    "shared:prettier": "cd packages/shared && yarn prettier",
    "shared:lint": "cd packages/shared && yarn lint",
    "shared:lint:fix": "cd packages/shared && yarn lint:fix",
    "scripts:prettier": "cd packages/scripts && yarn prettier",
    "scripts:lint": "cd packages/scripts && yarn lint",
    "scripts:lint:fix": "cd packages/scripts && yarn lint:fix",
    "scripts:clear": "cd packages/scripts && yarn clear",
    "scripts:next-fix": "cd packages/scripts && yarn next-fix",
    "prettier": "yarn backend:prettier && yarn frontend:prettier && yarn shared:prettier && yarn scripts:prettier",
    "lint": "yarn backend:lint && yarn frontend:lint && yarn shared:lint && yarn scripts:lint",
    "lint:fix": "yarn backend:lint:fix && yarn frontend:lint:fix && yarn shared:lint:fix && yarn scripts:lint:fix",
    "build": "yarn shared:build && yarn scripts:next-fix && yarn frontend:build && yarn backend:build",
    "pull": "git pull && yarn install && yarn shared:build",
    "precommit": "yarn prettier && yarn lint:fix && yarn build"
  },
  "author": "Martin Facciuto",
  "license": "ISC"
}
